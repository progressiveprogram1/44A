<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateProfile"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Setup Profile"
        android:textColor="@color/darkpink"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"></TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_marginTop="10dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        app:cardPreventCornerOverlap="false"
        app:cardCornerRadius="75dp">

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/iv_cp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:background="@drawable/ic_baseline_person_24"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"></ImageView>
    </androidx.cardview.widget.CardView>

    <EditText
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/et_username_cp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:drawablePadding="10dp"
        android:hint="Username"
        android:minHeight="48dp"
        android:textColor="@color/darkpink"
        android:textColorHint="@color/black"></EditText>


    <EditText
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/et_email_cp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:drawablePadding="10dp"
        android:hint="Email"
        android:minHeight="48dp"
        android:textColor="@color/darkpink"
        android:textColorHint="@color/black"></EditText>

    <EditText
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/et_branch_cp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/ic_baseline_school_24"
        android:drawablePadding="10dp"
        android:hint="Branch"
        android:minHeight="48dp"
        android:textColor="@color/darkpink"
        android:textColorHint="@color/black"></EditText>


    <EditText
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/et_country_cp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/ic_baseline_location_city_24"
        android:drawablePadding="10dp"
        android:hint="Country"
        android:minHeight="48dp"
        android:textColor="@color/darkpink"
        android:textColorHint="@color/black"></EditText>


    <Button
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Profile"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_cp"></Button>

    <ProgressBar
        android:id="@+id/progressbar_cp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"></ProgressBar>


</LinearLayout>